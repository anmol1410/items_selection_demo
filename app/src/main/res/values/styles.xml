<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorGray</item>
    </style>

    <style name="recycler_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">@dimen/zero</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_marginLeft">@dimen/spacing</item>
        <item name="android:layout_marginRight">@dimen/spacing</item>
    </style>

    <style name="checkBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/dot_diameter</item>
        <item name="android:layout_marginRight">@dimen/dot_diameter</item>
        <item name="android:layout_marginStart">@dimen/dot_diameter</item>
        <item name="android:layout_marginLeft">@dimen/dot_diameter</item>
        <item name="android:layout_toEndOf">@id/iv_msg_read_status_row_item</item>
        <item name="android:layout_toRightOf">@id/iv_msg_read_status_row_item</item>
        <item name="android:button">@drawable/checkbox_drawable</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="ItemHeadingStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|start</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">@dimen/spacing</item>
        <item name="android:paddingStart">@dimen/spacing</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="ItemSubHeadingStyle" parent="ItemHeadingStyle">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="ButtonTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_drawable</item>
        <item name="android:padding">@dimen/internal_padding</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="smallTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

</resources>
